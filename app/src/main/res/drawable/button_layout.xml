<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">

            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#2E779B" />
            <gradient android:angle="-90" android:startColor="#4687A3" android:endColor="#68839A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#436CA0" />
            <solid android:color="#587385"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#387A8B" />
            <gradient android:angle="-90" android:startColor="#2196DA" android:endColor="#587C85" />
        </shape>
    </item>
</selector>